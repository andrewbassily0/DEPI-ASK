pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/andrewbassily0/DEPI-ASK'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t depi-app .'
            }
        }
        stage('Test') {
            steps {
                sh 'python -m unittest discover tests' // Replace with your test command
            }
        }
        stage('Push to Docker Hub') {
            steps {
                sh 'docker push andrewbassily0/depi-app:latest'
            }
        }
    }
}