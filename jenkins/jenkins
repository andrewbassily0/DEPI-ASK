pipeline {
    agent {
        docker {
            image 'python:3.9'
        }
    }
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub') 
        SLACK_CREDENTIALS = credentials('Slack-Token') 
        DOCKER_IMAGE = 'depiiapp'
        PATH = "/usr/bin/docker:${PATH}"

    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/andrewbassily0/DEPI-ASK'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt' 
            }
        }

        stage('Run Tests') {
            steps {
                sh 'PYTHONPATH=$WORKSPACE pytest tests/' 
            }
        }
        stage('Check Docker') {
            steps {
                
                sh 'echo $PATH'
                sh 'which docker || echo "Docker not found in PATH"'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    
                    docker.build("depiapp:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh ' docker push andrewbassily0/depiapp:v1.0'
            }
        }
    }

    post {
        always {
            cleanWs()
        }

        success {
            slackSend (
                channel: 'devops',
                message: "Build SUCCESS: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' succeeded. View build details: ${env.BUILD_URL}",
                tokenCredentialId: 'Slack-Token'
            )
        }
        failure {
            slackSend (
                channel: 'devops',
                message: "Build FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' failed. View build details: ${env.BUILD_URL}",
                tokenCredentialId: 'Slack-Token'
            )
        }
    }
}
